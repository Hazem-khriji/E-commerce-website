{% extends 'temp.html.twig' %}
{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>
<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-6 mb-4">
            <img src="{{ asset('images/' ~product.getImageUrl()) }}" alt="Product" class="img-fluid rounded mb-3" style="max-height: 400px;
                object-fit: cover;" id="mainImage">
        </div>
        <div class="col-md-6">
            <table class="table">
                <tbody>
                    <tr class="mb-4">
                        <th>Id</th>
                        <td>{{ product.id }}</td>
                    </tr>
                    <tr class="mb-4">
                        <th>Name</th>
                        <td>{{ product.name }}</td>
                    </tr>
                    <tr class="mb-4">
                        <th>Price</th>
                        <td>{{ product.price }}</td>
                    </tr>
                    <tr class="mb-4">
                        <th>Description</th>
                        <td>{{ product.description }}</td>
                    </tr>
                    <tr class="mb-4">
                        <th>Category</th>
                        <td>{{ product.category }}</td>
                    </tr>
                    <tr class="mb-4">
                        <th>Stock</th>
                        <td>{{ product.stock }}</td>
                    </tr>
                    <tr class="mb-4">
                        <th>ImageUrl</th>
                        <td>{{ product.imageUrl }}</td>
                    </tr>
                </tbody>
            </table>
            <a href="{{ path('app_admin_product_index') }}" class="me-2">back to list</a>
            <a href="{{ path('app_admin_product_edit', {'id': product.id}) }}">edit</a>
            {{ include('admin_product/_delete_form.html.twig') }}

        </div>
    </div></div>

{% endblock %}
