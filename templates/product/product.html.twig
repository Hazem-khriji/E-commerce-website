{% extends('temp.html.twig') %}
{% block body %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

    <div class="container mt-5 mb-5">
        <div class="row">
            <div class="col-md-6 mb-4">
                <img src="{{ asset('images/' ~product.getImageUrl()) }}" alt="Product" class="img-fluid rounded mb-3" style="max-height: 400px;
                object-fit: cover;" id="mainImage">
            </div>

            <div class="col-md-6">
                <h2 class="mb-3">{{ product.name }}</h2>
                <p class="text-muted mb-4">Category: {{ product.category }}</p>
                <div class="mb-3">
                    <span class="h4 me-2">{{ product.price }} $</span>
                    <span class="text-muted"><s>{{ product.price * 4/3}} $</s></span>
                </div>
                <div class="mb-3">
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-half text-warning"></i>
                    <span class="ms-2">4.5 (120 reviews)</span>
                </div>
                <p class="mb-4">{{ product.description }}</p>

                <div class="mb-4" style="display: flex; align-items: center; justify-content: start; gap:80px;">

                    <a href="{{ path('cart_add', {'id': product.id}) }}" class="btn btn-primary btn-lg me-2">
                        <i class="bi bi-cart-plus"></i> Add to Cart
                    </a>
                    <a href="{{ path('app_shop') }}" class="btn btn-primary btn-lg me-2">
                        Continue Shopping
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function changeImage(event, src) {
            document.getElementById('mainImage').src = src;
            document.querySelectorAll('.thumbnail').forEach(thumb => thumb.classList.remove('active'));
            event.target.classList.add('active');
        }
    </script>
{% endblock %}